{
  "linters": {
    "cpplint": {
      "type": "cpplint",
      "include": [
        "(\\.h$)",
	"(\\.hpp$)",
        "(\\.cc$)",
        "(\\.cpp$)"
      ]
    },
    "cppcheck": {
      "type": "cppcheck",
      "include": [
        "(\\.h$)",
	"(\\.hpp$)",
        "(\\.cc$)",
        "(\\.cpp$)"
      ]
    },
    "filename" : {
      "type" : "filename",
      "include" : "(.*)"
    },
    "spelling" : {
      "type" : "spelling",
      "include" : "(.*)"
    }
  }
}
